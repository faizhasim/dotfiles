PLUGIN_DIR="$CONFIG_DIR/plugins"

HEIGHT=30
BOX_HEIGHT=20

sketchybar --add event aerospace_workspace_change

##### Bar Appearance #####
# Configuring the general appearance of the bar.
# These are only some of the options available. For all options see:
# https://felixkratz.github.io/SketchyBar/config/bar
# If you are looking for other colors, see the color picker:
# https://felixkratz.github.io/SketchyBar/config/tricks#color-picker

############## BAR ##############
sketchybar -m --bar height=$HEIGHT \
                    blur_radius=0 \
                    position=top \
                    padding_left=5 \
                    padding_right=5 \
                    margin=5 \
                    corner_radius=0 \
                    color=0x4d2E3440 \
                    border_width=0 \
                    border_color=0x4d2E3440

############## GLOBAL DEFAULTS ##############
sketchybar -m --default updates=when_shown \
                        drawing=on \
                        cache_scripts=on \
                        icon.font="FiraCode Nerd Font:Regular:16.0" \
                        icon.color=0xffECEFF4 \
                        icon.highlight_color=0xffA3BE8C \
                        label.font="FiraCode Nerd Font:Regular:14.0" \
                        label.color=0xffECEFF4

############## SPACE DEFAULTS ##############
sketchybar -m --default label.padding_left=0 \
                        label.padding_right=0 \
                        icon.padding_left=6 \
                        icon.padding_right=6

sketchybar -m --add item logo left \
              --set logo icon= \
                    background.color=0xffBF616A \
                    background.height=$HEIGHT \
                    background.padding_right=0 \
                    click_script="sketchybar -m --update"

############## PRIMARY DISPLAY SPACES ##############
sketchybar --add item chevron left \
           --set chevron icon= \
                         label.drawing=off \
                         background.color=0xffB48EAD \
                         background.height=$BOX_HEIGHT \
                         background.padding_left=15 \
                         icon.padding_right=6 \
                         icon.padding_left=6 \
           --add item front_app left \
           --set front_app icon.drawing=off \
                           script="$PLUGIN_DIR/front_app.sh" \
                           background.color=0xff3B4252 \
                           background.height=$BOX_HEIGHT \
                           label.padding_left=6 \
                           label.padding_right=6 \
           --subscribe front_app front_app_switched

sketchybar --add item space.$sid left \
    --subscribe space.99 aerospace_workspace_change \
    --set space.99 \
    background.color=0xffD8DEE9 \
    background.corner_radius=5 \
    background.height=$HEIGHT \
    background.drawing=off \
    label="99" \
    click_script="aerospace workspace 99" \
    script="$CONFIG_DIR/plugins/aerospace.sh 99"
for sid in $(aerospace list-workspaces --all); do
    sketchybar --add item space.$sid left \
        --subscribe space.$sid aerospace_workspace_change \
        --set space.$sid \
        background.color=0xffD8DEE9 \
        background.corner_radius=5 \
        background.height=$HEIGHT \
        background.drawing=off \
        label="$sid" \
        click_script="aerospace workspace $sid" \
        script="$CONFIG_DIR/plugins/aerospace.sh $sid"
done

##### Adding Left Items #####
# We add some regular items to the left side of the bar, where
# only the properties deviating from the current defaults need to be set

sketchybar --add item chevron left \
           --set chevron icon= label.drawing=off \
           --add item front_app left \
           --set front_app icon.drawing=off script="$PLUGIN_DIR/front_app.sh" \
           --subscribe front_app front_app_switched

############## ITEM DEFAULTS ###############
sketchybar -m --default label.padding_left=0 \
                        label.padding_right=6 \
                        icon.padding_right=0 \
                        icon.padding_left=6

############## RIGHT ITEMS ##############

# In the same way as the left items we can add items to the right side.
# Additional position (e.g. center) are available, see:
# https://felixkratz.github.io/SketchyBar/config/items#adding-items-to-sketchybar

# Some items refresh on a fixed cycle, e.g. the clock runs its script once
# every 10s. Other items respond to events they subscribe to, e.g. the
# volume.sh script is only executed once an actual change in system audio
# volume is registered. More info about the event system can be found here:
# https://felixkratz.github.io/SketchyBar/config/events

sketchybar -m --add item battery_value right \
              --set battery_value update_freq=120 \
                            script="$PLUGIN_DIR/battery-percentage.sh" \
                            icon= \
                            background.color=0xff3B4252 \
                            background.height=$BOX_HEIGHT \
              --subscribe battery system_woke power_source_change

sketchybar -m --add item battery_icon right \
              --set battery_icon update_freq=120 icon= \
                    script="$PLUGIN_DIR/battery-icon.sh" \
                    background.color=0xffB48EAD \
                    background.height=$BOX_HEIGHT \
                    background.padding_left=10 \
              --subscribe battery system_woke power_source_change

sketchybar -m --add item clock right \
              --set clock update_freq=10 \
                          script="$PLUGIN_DIR/clock.sh" \
                          background.color=0xff3B4252 \
                          background.height=$BOX_HEIGHT

sketchybar -m --add item clock_logo right\
              --set clock_logo icon= \
                               background.color=0xff5E81AC \
                               background.height=$BOX_HEIGHT \
                               background.padding_left=10

sketchybar -m --add item volume right \
              --set volume update_freq=10 \
                          script="$PLUGIN_DIR/volume-percentage.sh" \
                          background.color=0xff3B4252 \
                          background.height=$BOX_HEIGHT \
              --subscribe volume volume_change

sketchybar -m --add item volume_icon right \
              --set volume_icon icon=  \
                               script="$PLUGIN_DIR/volume-icon.sh" \
                               background.color=0xffD08770 \
                               background.height=$BOX_HEIGHT \
                               background.padding_left=10 \
              --subscribe volume volume_change



sketchybar -m --add event song_update com.apple.iTunes.playerInfo
sketchybar -m --add item music right \
              --set music update_freq=10 \
                          script="$PLUGIN_DIR/music.sh" \
                          click_script="$PLUGIN_DIR/music_click.sh" \
                          drawing=off \
                          background.color=0xff3B4252 \
                          background.height=$BOX_HEIGHT \
                          label.padding_left=6 \
                          label.padding_right=6 \
                          icon.padding_right=6 \
                          icon.padding_left=6 \
              --subscribe music song_update


##### Force all scripts to run the first time (never do this in a script) #####
sketchybar --update